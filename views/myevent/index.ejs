<div class="homevent">
  Manage MyEvent
  <hr />
  Today Date -
  <script>
    var curday = function (sp) {
      today = new Date();
      var dd = today.getDate();
      var mm = today.getMonth() + 1; //As January is 0.
      var yyyy = today.getFullYear();

      if (dd < 10) dd = "0" + dd;
      if (mm < 10) mm = "0" + mm;
      return dd + sp + mm + sp + yyyy;
    };

    document.write(curday("/"));
  </script>
  <br />
</div>
<div class="row1">
  <% for(var i = 0; i < event.length;i++){ %>
  <div class="column1">
    <div class="eventShape">
      <p style="text-align: center; padding-top: 10px">
        <%= event[i].eventStartDate.getDate() + " / " +
        event[i].eventStartDate.getMonth() + " / " +
        event[i].eventStartDate.getFullYear() %>
        <br />
        <%= event[i].eventName %>
      </p>
      <img src="eng1.jpg" alt="eng poster" width="350" />
      <% if(event[i].eventApproval == false) { %>
      <button
        style="background-color: rgb(172, 172, 172); color: black"
        class="eventBtn"
        onclick="location.href='/myevent/<%= event[i].id %> ';"
      >
        PENDING STATUS
      </button>
      <% } else{ %>
