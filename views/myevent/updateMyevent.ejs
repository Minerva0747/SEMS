<div class="updateform">
  <h3>UPDATE EVENT : <%= event.eventName %></h3>
  <hr class="new1" />
</div>
<div class="updateform">
  <div class="breakform">
    <form action="/myevent/updateMyevent/<%= event.id %>" method="POST">
      <label for="id" style="text-align: left">EVENT TITLE</label><br />
      <input type="text" placeholder="Title" id="eventName" name="eventName" />
      <label for="id" style="text-align: left">EVENT START</label><br />
      <input type="date" id="eventStartDate" name="eventStartDate" />
      <input type="time" id="eventStartTime" name="eventStartTime" />
      <br />
      <label for="id" style="text-align: left; padding-top: 1em"
        >EVENT END</label
      ><br />
      <input
        type="date"
        placeholder="Enter Phone Number"
        id="date"
        name="eventEndDate"
      />
      <input type="time" id="time" name="eventEndTime" />
      <br />
      <label for="id" style="text-align: left; padding-top: 1em">VENUE</label
      ><br />
      <input type="text" placeholder="Venue" id="venue" name="venue" />
      <br />
      <label for="id" style="text-align: left; padding-top: 1em"
        >ORGANIZER</label
      ><br />
      <input type="text" placeholder="by.." id="organizer" name="organizedBy" />
      <br />
      <label for="id" style="text-align: left; padding-top: 1em"
        >ACTIVITIES</label
      ><br />
      <textarea
        rows="5"
        cols="50"
        placeholder="Enter..."
        name="eventActivities"
        style="border: 1px solid #bcbcbc; padding: 1em"
      ></textarea>
      <br />
      <label for="id" style="text-align: left; padding-top: 1em"
        >DESCRIPTION</label
      ><br />
      <textarea
        rows="5"
        cols="50"
        placeholder="Enter..."
        name="description"
        style="border: 1px solid #bcbcbc; padding: 1em"
      ></textarea>
      <br />

      <button class="bluebutton" type="submit" style="margin-top: 3em">
        SUBMIT
      </button>
    </form>
    <button
      class="whitebutton"
      onclick="location.href='/myevent/<%= event.id %>';"
      style="margin-top: 1em; margin-bottom: 5em"
    >
      Cancel
    </button>
  </div>
</div>

