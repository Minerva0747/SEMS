<div class="homevent">
  <hr />
  View Attendance
  <button
    class="whitebutton"
    onclick="location.href='/myevent/<%= id %> ';"
    style="float: right; width: 8em"
  >
    Back
  </button>
</div>

<div class="certList" style="margin-top: 0">
  <table class="tablecert">
    <tr style="background-color: #f6f2e9">
      <th style="padding: 15px; padding-left: 2em">NO</th>
      <th style="padding: 15px">Name</th>
      <th style="padding: 15px">Student ID</th>
      <th style="padding: 15px">Status</th>
    </tr>
    <% for(var i = 0; i < data.length;i++){ %>
    <tr>
      <td style="padding: 15px; padding-left: 2em; background-color: #dbd3bf">
        <%= i+1 %>
      </td>
      <td style="padding: 15px; background-color: #dbd3bf">
        <%= data[i].name %>
      </td>
      <td style="padding: 15px; background-color: #dbd3bf">
        <%= data[i].roleID %>
      </td>

      <% if(event[i]) { %>
      <td style="padding: 15px; background-color: #dbd3bf"><%=event[i]%></td>
      <% } else{%>
      <td style="padding: 15px; background-color: #dbd3bf"><%=event[i]%></td>
      <% }%>

    </tr>
    <% }%>
    <tr>
      <td style="padding: 12px; height: 6em"></td>
      <td style="padding: 12px"></td>
      <td style="padding: 12px"></td>
    </tr>
  </table>
</div>
