<div class="header">
  <div class="topnav">
    <div class="navlogo">
      <img
        src="/public/MySchool.png"
        alt="logo"
        height="65"
        style="float: left; padding-right: 2em; padding-top: 6px"
      />
    </div>

    <form id="myform" action="/user/logout" method="POST">
      <a
        href="#"
        onclick="document.getElementById('myform').submit()"
        style="float: right"
        >LOG-OUT</a
      >
    </form>

    <noscript>
      <input type="submit" value="Submit form!" />
    </noscript>
    <a href="/profile" style="float: right">PROFILE</a>
    <a href="/volunteer" style="float: right">VOLUNTEER</a>
    <a class="active" style="float: right">MyEVENT</a>
    <a href="/participation" style="float: right">PARTICIPATION</a>
    <a href="/home" style="float: right">HOME</a>
  </div>
</div>
<div class="homevent">
  <%= event.eventName %>
  <form class="formBtn" action="/myEvent/signoff/<%= event.id %>" method="POST">
    <button
      class="bluebutton"
      type="submit"
      onclick="location.href='';"
      style="width: 8em; margin-left: 1em"
    >
      SIGN OFF
    </button>
  </form>

  <button
    class="bluebutton"
    onclick="location.href='/myevent/updateMyevent/<%= event.id %>';"
    style="width: 8em; margin-left: 1em"
  >
    UPDATE
  </button>

  <form class="formBtn" action="/myEvent/cancel/<%= event.id %>" method="POST">
    <button
      class="bluebutton"
      type="submit"
      style="
        width: 13em;
        float: right;
        margin-right: 1em;
        background-color: #e16e6e;
      "
    >
      CANCEL EVENT
    </button>
  </form>
  <button
    class="whitebutton"
    onclick="location.href='/myevent';"
    style="float: right; width: 8em; margin-right: 1em"
  >
    Back
  </button>
  <hr />
  <form class="formBtn">
    <button
      class="bluebutton"
      onclick="location.href='';"
      style="width: 11em; margin-left: 1em"
    >
      Write QR Code
    </button>
  </form>
  <form class="formBtn">
    <button
      class="bluebutton"
      onclick="location.href='/myevent/viewattendance';"
      style="width: 11em; margin-left: 1em"
    >
      View Attendance
    </button>
  </form>
</div>
<div class="row2">
  <div class="column2">
    <div>
      <img src="/public/eng1.jpg" alt="eng poster" width="350" />
      <br />
      <form action="/myEvent/updateBanner/<%= event.id %>" method="POST">
        <label for="id" style="text-align: left; padding-top: 1em"
          >Update Poster</label
        ><br />
        <script>
          FilePond.registerPlugin(
            FilePondPluginImagePreview,
            FilePondPluginImageResize,
            FilePondPluginFileEncode
          );

          FilePond.setOptions({
            stylePanelAspectRatio: 1 / coverAspectRatio,
            imageResizeTargetWidth: coverWidth,
            imageResizeTargetHeight: coverHeight,
          });
        </script>
        <!-- We'll transform this input into a pond -->
        <input type="file" name="poster" class="filepond" />

        <!-- Load FilePond library -->
        <script src="https://unpkg.com/filepond/dist/filepond.js"></script>

        <!-- Turn all file input elements into ponds -->
        <script>
          FilePond.parse(document.body);
        </script>

        <button type="submit" margin-top: 1em">Submit</button>
      </form>
    </div>
  </div>
  <div class="column2" style="border-left: 4px solid #707070">
    <div class="pDetails">
      <table>
        <tr>
          <td style="padding: 0.7em">Date</td>
          <td><%= event.eventStartDate.getDate() + " / " + event.eventStartDate.getMonth() + " / " + event.eventStartDate.getFullYear() + " - " + event.eventEndDate.getDate() + " / " + event.eventEndDate.getMonth() + " / " + event.eventEndDate.getFullYear() %></td>
        </tr>
        <tr>
          <td style="padding: 0.7em">Time</td>
          <td><%= event.eventStartDate.getHours() + "." + event.eventStartDate.getMinutes()  +  " - " +  event.eventEndDate.getHours() + "." + event.eventEndDate.getMinutes() %></td>
        </tr>
        <tr>
          <td style="padding: 0.7em">Venue</td>
          <td><%= event.venue %></td>
        </tr>
        <tr>
          <td style="padding: 0.7em">Organizer</td>
          <td><%= event.organizedBy %></td>
        </tr>
        <tr>
          <td style="padding: 0.7em">Activities</td>
          <td>: <%= event.eventActivities %></td>

          </td>
        </tr>
      </table>
      <p style="padding: 0.7em">
        Description : <%= event.description %>
      </p>
    </div>
  </div>
</div>
