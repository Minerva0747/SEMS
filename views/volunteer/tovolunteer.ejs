<div class="homevent" style="margin-top: -1em">
  BE A VOLUNTEER!!
  <hr />
  Today date -
  <script>
    var curday = function (sp) {
      today = new Date();
      var dd = today.getDate();
      var mm = today.getMonth() + 1; //As January is 0.
      var yyyy = today.getFullYear();

      if (dd < 10) dd = "0" + dd;
      if (mm < 10) mm = "0" + mm;
      return dd + sp + mm + sp + yyyy;
    };

    document.write(curday("/"));
  </script>
</div>
<% for(var i = 0; i < event.length;i++){ %> <% if(event[i].eventApproval ==
true){ %>
<div class="volunteerbox">
  <div class="row3" style="margin-bottom: 2em">
    <div class="column3 left3" style="text-align: center">
      <h4><%= event[i].eventName %></h4>

      <img <% if(event[i].posterImageType == null) { %>
      src="/public/futsal1.jpg" <% } else { %> src="<%= event[i].posterPath %>"
      <% } %> alt="poster" style=" width: 25em; height: 18em; display: block;
      margin-left: auto; margin-right: auto; " />
    </div>
    <div
      class="column3 right3"
      style="text-align: left; font-size: large; padding: 2em"
    >
      <div>
        Date : <%= event[i].eventStartDate.getDate() + " / " +
        event[i].eventStartDate.getMonth() + " / " +
        event[i].eventStartDate.getFullYear() %>
        <br />

        <h2 style="float: right; margin-right: 1em">
          <%= event[i].volunteerNeeded %> Volunteer needed
        </h2>
        <br />
        Time : <%= event[i].eventStartDate.getHours() + "." +
        event[i].eventStartDate.getMinutes() + " - " +
        event[i].eventEndDate.getHours() + "." +
        event[i].eventEndDate.getMinutes() %> <br />
        <br />
        Venue : <%= event[i].venue %>
      </div>
      <div>
        <br />
        Task :
        <br />
        <% for(var j = 0; j < event[i].taskVolunteer.length;j++){ %> <%= j+1 %>.
        <%= event[i].taskVolunteer[j] %>
        <br />

        <% } %>
      </div>
      <div>
        <form method="POST" action="/volunteer/tovolunteer/<%= event[i].id %>">
          <button
            class="bluebutton"
            type="submit"
            onclick="location.href='';"
            style="
              font-size: medium;
              float: right;
              margin-right: 2em;
              width: 15em;
              border-radius: 15px;
            "
          >
            VOLUNTEER
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<% } %> <% } %>
