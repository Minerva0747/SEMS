<div class="updateform">
  <h3>UPDATE PROFILE</h3>
  <hr class="new1" />
  <div class="breakform">
    <form action="/user/update" method="POST">
      <label for="id" style="text-align: left">FULL NAME</label><br />
      <input type="name" placeholder="Enter Full Name" id="name" name="name" />
      <br />
      <label for="id" style="text-align: left; padding-top: 1em">EMAIL</label
      ><br />
      <input type="email" placeholder="Enter Email" id="email" name="email" />
      <br />
      <label for="id" style="text-align: left; padding-top: 1em"
        >PHONE NUMBER</label
      ><br />
      <input
        type="text"
        placeholder="Enter Phone Number"
        id="phoneNumber"
        name="phoneNumber"
      />
      <br />
      <label for="id" style="text-align: left; padding-top: 1em">ADDRESS</label
      ><br />
      <input
        type="text"
        placeholder="Enter Address"
        id="address"
        name="address"
      />
      <br />
      <label for="id" style="text-align: left; padding-top: 1em">SCHOOL</label
      ><br />
      <input
        type="text"
        placeholder="Enter Phone Number"
        id="school"
        name="school"
      />
      <br />
      <label for="id" style="text-align: left; padding-top: 1em">CLASS</label
      ><br />
      <input type="text" placeholder="Enter Class" id="class" name="class" />

      <button class="bluebutton" type="submit" style="margin-top: 3em">
        UPDATE PROFILE
      </button>
      <button
        class="whitebutton"
        onclick="location.href='/profile';"
        style="margin-bottom: 5em"
      >
        Cancel
      </button>
    </form>
  </div>
</div>
