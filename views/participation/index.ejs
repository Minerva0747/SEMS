<div class="homevent">
  REMINDER - UPCOMING PARTICIPATION EVENTS
  <hr />
  Today date -
  <script>
    var curday = function (sp) {
      today = new Date();
      var dd = today.getDate();
      var mm = today.getMonth() + 1; //As January is 0.
      var yyyy = today.getFullYear();

      if (dd < 10) dd = "0" + dd;
      if (mm < 10) mm = "0" + mm;
      return dd + sp + mm + sp + yyyy;
    };

    document.write(curday("/"));
  </script>
</div>
<div class="row1">
  <div class="column1">
    <div class="eventShape">
      <button class="createBtn" onclick="location.href='/home';">
        Join More Event ?<br />
        <i class="fa fa-plus"></i>
      </button>
    </div>
  </div>

  <% for(var i = 0; i < event.length;i++){ %>

  <div class="column1">
    <div class="eventShape">
      <p style="text-align: center; padding-top: 10px">
        <%= event[i].eventStartDate.getDate() + " / " +
        event[i].eventStartDate.getMonth() + " / " +
        event[i].eventStartDate.getFullYear() %>
        <br />
        <%= event[i].eventName %>
      </p>
      <img <% if(event[i].posterImageType == null) { %>
      src="/public/futsal1.jpg" <% } else { %> src="<%= event[i].posterPath %>"
      <% } %> alt="poster" style=" width: 25em; height: 18em; display: block;
      margin-left: auto; margin-right: auto; " />

      <button
        class="eventBtn"
        onclick="location.href='/participation/<%= event[i].id %> ';"
      >
        DETAILS
      </button>
    </div>
  </div>
  <% } %>
</div>
